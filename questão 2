#include <stdio.h>

int main() {
    int X, Y;
    scanf("%d %d", &X, &Y);

    double preco;

    switch (X) {
        case 1:
            preco = 4.00;
            break;
        case 2:
            preco = 4.50;
            break;
        case 3:
            preco = 5.00;
            break;
        case 4:
            preco = 2.00;
            break;
        case 5:
            preco = 1.50;
            break;
        default:
            printf("Código inválido\n");
            return 1; // Saída com código de erro
    }

    double total = preco * Y;
    printf("Total: R$ %.2f\n", total);

    return 0;
}

